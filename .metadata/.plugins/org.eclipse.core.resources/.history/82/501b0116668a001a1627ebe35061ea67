package variablesCondicionales;

import ejercicios.Entrada;

//15. Pedir el día, mes y año de una fecha e indicar si la fecha es correcta. Suponiendo todos los meses de
//30 días.
public class Ejercicio15 {

	public static void main(String[] args) {
		int dia;
		int mes;
		int año;
		
//		Para que una fecha sea correcta se tiene que cumplir
//		día en el rango de 1-30
//		mes en el rango 1-12
//		año cualquiera distinto de 0
		
		System.out.println("Introduzca día: ");
		dia = Entrada.entero();
		System.out.println("Introduzca mes: ");
		mes = Entrada.entero();
		System.out.println("Introduzca año: ");
		año = Entrada.entero();
		
		if (dia >= 1 && dia <= 30) {
			if (mes >= 1 && dia <= 12) {
				if (año > 0) {
					System.out.println("La fecha: " +  dia +"/" + mes + "/" + año + " es correcta");
				}
			}else {
				System.out.println("La fecha: " +  dia +"/" + mes + "/" + año + " es incorrecta");
			}
		}
	}
}
